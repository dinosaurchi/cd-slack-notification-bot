{
    "go.testTimeout": "0",
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],
    "go.buildFlags": [
        "-tags=tools"
    ],
    "[go]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
    },
    "[json]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "files.insertFinalNewline": true
    },
    "[makefile]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
    }
}